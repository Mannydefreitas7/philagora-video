// Configuration settings file format documentation can be found at:
// https://developer.apple.com/documentation/xcode/adding-a-build-configuration-file-to-your-project

// MARK: - Product

PRODUCT_NAME = Aperture
PROJECT_NAME = Aperture
PRODUCT_BUNDLE_IDENTIFIER = com.philagora.aperture
MARKETING_VERSION = 1.0.0
CURRENT_PROJECT_VERSION = 1

// MARK: - Deployment

MACOSX_DEPLOYMENT_TARGET = 26.0

// MARK: - Code Signing

DEVELOPMENT_TEAM = FUU334NWUK
CODE_SIGN_STYLE = Automatic
CODE_SIGN_IDENTITY = Apple Development
ENABLE_HARDENED_RUNTIME = YES

// MARK: - Swift

SWIFT_VERSION = 5.10
SWIFT_STRICT_CONCURRENCY = minimal
SWIFT_EMIT_LOC_STRINGS = YES
SWIFT_OBJC_BRIDGING_HEADER =

// MARK: - Info.plist & Entitlements

GENERATE_INFOPLIST_FILE = NO
INFOPLIST_FILE = Aperture/Info.plist
CODE_SIGN_ENTITLEMENTS = Aperture/Aperture.entitlements
INFOPLIST_KEY_CFBundleDisplayName = Aperture
INFOPLIST_KEY_LSApplicationCategoryType = public.app-category.photo-video
INFOPLIST_KEY_NSPhotoLibraryUsageDescription = Aperture needs access to your photo library to import photos.

// MARK: - Asset Catalog

ASSETCATALOG_COMPILER_APPICON_NAME = AppIcon
ASSETCATALOG_COMPILER_INCLUDE_ALL_APPICON_ASSETS = YES
ASSETCATALOG_COMPILER_GLOBAL_ACCENT_COLOR_NAME = AccentColor
ASSETCATALOG_COMPILER_GENERATE_ASSET_SYMBOLS = YES
ASSETCATALOG_COMPILER_GENERATE_SWIFT_ASSET_SYMBOL_EXTENSIONS = YES

// MARK: - Sandbox & Capabilities

ENABLE_FILE_ACCESS_PICTURE_FOLDER = YES
ENABLE_FILE_ACCESS_MOVIES_FOLDER = YES
ENABLE_FILE_ACCESS_DOWNLOADS_FOLDER = YES
ENABLE_RESOURCE_ACCESS_AUDIO_INPUT = YES
ENABLE_RESOURCE_ACCESS_CAMERA = YES
ENABLE_USER_SELECTED_FILES = YES

// MARK: - C / C++ / Obj-C

GCC_C_LANGUAGE_STANDARD = c17
CLANG_CXX_LANGUAGE_STANDARD = c++20
CLANG_ENABLE_MODULES = YES
CLANG_ENABLE_OBJC_ARC = YES
ENABLE_STRICT_OBJC_MSGSEND = YES

// MARK: - Metal

METAL_ENABLE_DEBUG_INFO = YES
MTL_ENABLE_DEBUG_INFO = YES

// MARK: - Misc

COMBINE_HIDPI_IMAGES = YES
ENABLE_TESTABILITY = NO

// MARK: - Linker

OTHER_LDFLAGS = $(inherited) -framework AVFoundation -framework ScreenCaptureKit -framework CoreMedia -framework AVKit -framework Accelerate -framework Metal -framework CoreAudio -framework AudioToolbox
